version: '3.4'

services:
  db:
    image: custom-keyboards-web-db
    command: mysqld --default-authentication-plugin=mysql_native_password
    restart: always
    build: 
      context: .
      dockerfile: db/CustomKeyboardsWeb/Dockerfile
    environment:
      TZ: America/Sao_Paulo
      MYSQL_ROOT_PASSWORD: root
      MYSQL_USER: root
      MYSQL_PASSWORD: root
      MYSQL_DATABASE: custom-keyboards-web
    ports:
      - "3308:3306"
    networks:
      - keyboards-network

  customkeyboardsweb: 
    image: custom-keyboards-web:latest
    build:
      context: .
      dockerfile: CustomKeyboardsWeb/Dockerfile
    environment:
      TZ: America/Sao_Paulo
      ASPNETCORE_ENVIRONMENT: Production
    ports:
      - "44300:80"
    depends_on:
      - db
    networks:
      - keyboards-network

networks:
  keyboards-network:
    driver: bridge
